<% layout('/layouts/boiler') -%>

    <div class="row mt-3">
        <h2 class="col-6 offset-2 mb-3">SighUp in WoderLust</h2>
        
        <div class="col-8 offset-2">
            <form class="needs-validation" novalidate action="/sighup" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Enter Your Full Name</label>
                    <input name="name" type="text" class="form-control" required>
                    <div class="invalid-feedback"> name is required</div>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Enter Username</label>
                    <input name="username" type="text" class="form-control" required>
                    <div class="invalid-feedback"> username is required</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="text" class="form-control" required>
                    <div class="invalid-feedback"> email is required</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password" type="password" class="form-control" required>
                    <div class="invalid-feedback"> password is required</div>
                </div>
                <button class="btn btn-dark add-btn mb-3">SighUp</button>
            </form>


        </div>
    </div>